{
    "window.commandCenter": true,
    "workbench.colorTheme": "Solarized Dark",

    "terminal.integrated.gpuAcceleration": "off",
    "window.systemColorTheme": "dark",
    "window.autoDetectColorScheme": false,
    "window.titleBarStyle": "custom",
    "git.autofetch": true,
    "redhat.telemetry.enabled": true,

    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.searchHighlightColor": "rgba(255, 255, 255, 0.7)",
    "vim.searchHighlightTextColor": "rgba(0, 43, 54, 1.0)",

    "workbench.colorCustomizations": {
        "terminal.background": "#00000000",

        "editor.findMatchHighlight": "rgba(255, 235, 59, 0.5)",
        "editor.findMatchHighlightBorder": "rgba(0, 0, 0, 1.0)",

        "editor.wordHighlight": "rgba(255, 235, 59, 0.5)",
        "editor.wordHighlightBorder": "rgba(0, 0, 0, 1.0)",
        "editor.wordHighlightStrong": "rgba(255, 215, 0, 0.6)",
        "editor.wordHighlightStrongBorder": "rgba(0, 0, 0, 1.0)",

        "editor.selectionHighlight": "rgba(255, 235, 59, 0.4)",
        "editor.selectionHighlightBorder": "rgba(100, 149, 237, 0.4)"
    },

    "makefile.configureOnOpen": false,

    "files.associations": {
        "shell.*": "shellscript",
        "aliases.*": "shellscript",
        ".bashrc": "shellscript",
        ".zshrc": "shellscript",
        ".profile": "shellscript",
        "*.sh": "shellscript",
        "*.bash": "shellscript",
        "*.zsh": "shellscript",
        "*.fish": "shellscript",
        "*.ps1": "powershell",

        "*gitignore*": "ignore",
        "*gitconfig*": "git-config",
        "*gitattributes*": "git-commit",

        ".vimrc": "viml",
        "vimrc.*": "viml",
        "mappings.common": "viml",

        "*.conf": "ini",
        "config": "ini",

        "*.json": "json",
        "*.yaml": "yaml",
        "*.yml": "yaml",

        "Dockerfile*": "dockerfile",
        "*.log": "log"
    },

    "files.exclude": {
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/.git": true,
        "**/bower_components": true,
        "**/*.pyc": true,
        "**/__pycache__": true
    },
    "diffEditor.ignoreTrimWhitespace": false
}
