{
  "name": "${localWorkspaceFolderBasename} Dev",
  "dockerComposeFile": "compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  "remoteUser": "developer",
  "customizations": {
    "vscode": {
      "extensions": [
        // Universal - Container & DevOps
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker",
        "github.vscode-github-actions",
        "redhat.vscode-yaml",
        "timonwong.shellcheck",
        "ms-vscode.makefile-tools",

        // Universal - Documentation
        "yzhang.markdown-all-in-one",
        "bierner.markdown-mermaid",

        // Universal - Git
        "eamodio.gitlens",

        // Universal - AI
        "anthropic.claude-code",
        "openai.chatgpt",

        // Python (all profiles except java-plugin)
        "ms-python.python",
        "charliermarsh.ruff",

        // JavaScript/TypeScript (web and fullstack profiles)
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",

        // Java (java-plugin and fullstack profiles)
        "vscjava.vscode-java-pack",
        "vscjava.vscode-maven",
        "vscjava.vscode-gradle"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        },
        // Java settings
        "java.configuration.updateBuildConfiguration": "automatic",
        "java.compile.nullAnalysis.mode": "automatic"
      }
    }
  },
  "runArgs": [
    "--cap-add=NET_ADMIN",
    "--cap-add=NET_RAW"
  ],
  "mounts": [
    "source=${localWorkspaceFolder}/.cache,target=/home/developer/.cache,type=bind",
    "source=project-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=project-claude-config-${devcontainerId},target=/home/developer/.claude,type=volume"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/developer/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true"
  },
  "postCreateCommand": "bash /workspace/.devcontainer/post-create.sh",
  "postStartCommand": "sudo /usr/local/bin/init-firewall.sh || true; bash /workspace/.devcontainer/post-start.sh",
  "waitFor": "postStartCommand"
}
