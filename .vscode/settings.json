{
    "makefile.configureOnOpen": false,

    "files.associations": {
        // Shell
        "shell.*": "shellscript",
        "aliases.*": "shellscript",
        ".bashrc": "shellscript",
        ".zshrc": "shellscript",
        ".profile": "shellscript",
        "*.sh": "shellscript",
        "*.bash": "shellscript",
        "*.zsh": "shellscript",
        "*.fish": "shellscript",
        "*.ps1": "powershell",

        // Git
        "*gitignore*": "ignore",
        "*gitconfig*": "git-config",
        "*gitattributes*": "git-commit",

        // Vim
        ".vimrc": "viml",
        "vimrc.*": "viml",
        "mappings.common": "viml",

        // Config
        "*.conf": "ini",
        "config": "ini",

        // Data Files
        "*.json": "json",
        "*.yaml": "yaml",
        "*.yml": "yaml",

        // Misc
        "Dockerfile*": "dockerfile",
        "*.log": "log"
    },

    "files.exclude": {
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/.git": true,
        "**/bower_components": true,
        "**/*.pyc": true,
        "**/__pycache__": true
    },

    // Additional recommended settings
    "editor.detectIndentation": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true
}
